 {
  "apps" : [{
    "name"        : "web",
    "script"      : "index.js",
    "args"        : "['--debug']",
    "ignoreWatch" : ["client"],
    "watch"       : "./",
    "env" : {
        "NODE_ENV":"development"
    }
  },
  {
    "name"        : "node-inspector",
    "script"      : "/usr/bin/node-inspector"
  },
  {
    "name" : "SASS",
    "script" : "/home/vagrant/.gem/ruby/2.1.0/bin/sass",
    "args": "['--watch', 'client/styles/sass/main.scss:client/styles/main.css']",
    "exec_mode" : "fork_mode",
    "exec_interpreter": "none"
  }
  ]
}
